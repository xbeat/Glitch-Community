collection-avatar-size = 55px

.collections
  clear: both
  display: inline-block
  width: 100%
  vertical-align: top
  border-radius: 5px
  padding: 16px
  
  a
    color: primary
    text-decoration: none
    &:hover
      text-decoration: underline

  header
    float: left
    width: 22%
    @media (max-width: hugeViewport)
      width: 21%

  .placeholder
    margin-top: 12px
    .psst
      width: 50px
      display: inline-block
      vertical-align: middle
      margin-right: .5rem
    p
      display: inline-block
      vertical-align: bottom
    
  .category
    padding-bottom: 0
    margin-top: 0
    margin-right: 3%
    @media (max-width: 800px)
      float: none
      width: initial
      width: 100%
      .category-description
        max-width: initial

  .category-name
    display: inline-block
    h2
      margin-top: 0
    .arrow
      margin-left: 5px

  .category-image-container
    display: block
    .category-image
      display: inline-block

  .category-description
    font-size: 14px
    margin-bottom: 0

  .collections-container
    margin: 10px 0px
    padding: 0
    list-style-type: none
    // overflow: auto
    overflow: hidden
    
    .button-wrap
      display: block
      position: inherit

    > li
      float: left
      display: block
      margin-right: 10px
      width: calc(33.3% - 10px)
      position: relative
      margin-bottom: 12px
      @media (max-width: mediumViewport)
        width: 100%
      
    a
      &:hover
        text-decoration: none
      
    .down-arrow
      margin: 0
    
  .collection
    margin-top: 30px
    font-size: 0.9rem
    border-radius: 5px
    width: 100%
    padding-bottom: 1.5rem
    height: 315px
    position: relative
    transition: 0.1s all
    overflow: visible
    background-color: secondary-background

    a
      color: primary
      
    .collection-container
      overflow: hidden
      height: calc(100% + 45px)
      &:hover
        cursor: pointer

    .collection-info
      display: flex
      height: 130px
      padding: 12px
      overflow: hidden
      border-top-right-radius: 5px
      border-top-left-radius: 5px
      .avatar
        display: block
        margin-top: 6px
        width: collection-avatar-size 
        height: collection-avatar-size
        border-radius: 5px
        svg
          width: 100%
          height: 100%
      
    .avatar
      border-radius: 5px
      margin-right: 7px
      vertical-align: top
      display: inline-block
      
    .collection-name-description
      width: 100%
      margin-left: 12px

    .button
      max-width: "calc(100% - 11px)" % collection-avatar-size
      vertical-align: -13px

    .project-name
      display: inline-block
    
    .description
      display: block
      margin-top: 10px

    .overflow-mask
      position: absolute
      width: 100%
      bottom: 0
      left: 0
      height: 12px
      opacity: .6
      border-bottom-left-radius: 5px
      border-bottom-right-radius: 5px

    .private-project-badge
      display: none

    &.private-project
      background-color: private
      border-bottom-color: private
      .overflow-mask
        background-color: private
      .private-project-badge
        display: inline-block
    
    .projects-preview
      height: 145px
      padding: 0
      padding-top: 15px
      .project-container
        display: block
        padding: 7px 15px
        margin: 0px 10px 5px
        border-radius: 5px
        // background-color: input-border
        background-color: section-line
        .avatar
          width: 25px
          height: 25px
        .project-name
          margin-top: 5px
          margin-left: 5px
        .private-project-badge
          display: none
          background-image: url("https://cdn.glitch.com/f7224274-1330-4022-a8f2-8ae09dbd68a8%2Fprivate.svg?1496253541539")
          float: right
        &.private
          background-color: private
          .private-project-badge
            display: inline-block
    .projects-preview.empty
      height: 100%
      padding: 10px
      margin: 0px 10px 5px;
      border-radius: 5px;
      height: auto;
      a
        color: tertiary
    .collection-link
      padding: 12px
      font-weight: 600
      font-size: 13px

.project-badge
  display: inline-block
  width: 22px
  height: 20px
  margin-right: 4px
  border-radius: 3px
  background-position: center
  background-repeat: no-repeat
  vertical-align: middle
  &.private-project-badge
    background-color: private
    background-image: url('https://cdn.glitch.com/f7224274-1330-4022-a8f2-8ae09dbd68a8%2Fprivate.svg?1496253541539')
  &.public-project-badge
    opacity: 0.7
    background-image: url('https://cdn.glitch.com/26aa7be9-76e2-4f1c-a3e4-6a41ddcec98f%2Fpublic.svg?1528830915543')
.create-first-collection
    margin-top: 20px
    float: left
    width: calc(33.3% - 10px)
    img
      margin-right: 15px
      float: left
      margin-bottom: 10px
    .placeholder
      margin: 0px
.search-results,
.user-page,
.team-page,
.category-page
  .category
    float: none
    width: initial

.collection-options
  position: absolute
  right: 0px
  top: 4px
  padding: 10px
  padding-bottom: 8px
  background-color: white
  border-radius: 5px
  border: 0
  z-index: 1
  &:focus
    outline: transparent
    background: #efefef
    