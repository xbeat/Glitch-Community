.results-list
  overflow-y: auto
  max-height: 500px
  font-weight: normal
  
  .results
    margin: 0
    padding-left: 0

    a:hover
      text-decoration: none

    .result
      display: block
      width: 100%
      position: relative
      text-decoration: none
      &:hover,
      &.hover,
      &:focus,
      &.active
        background-color: general-link
        a
          color: background-color

  .result
    list-style-type: none
    cursor: pointer
    border-bottom: 1px solid section-line
    padding: 6px
    padding-top: 12px
    padding-bottom: 12px
    &:hover,
    &.hover,
    &:focus,
    &.active
      border-radius: 3px
      color: background-color
      .result-description, p
        color: secondary-hover-on-color
      .result-name
        color: background-color
    
    // &:last-child
    //   border-bottom: none;

  .result-name
    display: inline-block
    vertical-align: middle
    max-width: calc(100% - 22px - 5px) // space for the avatar
    line-height: 16px
    color: primary
  
  .result-description
    color: text-on-secondary-background
    word-break: break-word
    font-family: monospace
    font-size: 12px
    line-height: 18px
    padding-top: 5px
  
  .thanks
    .emoji
      width: 14px
      height: 14px
    font-size: 12px
    margin-top: 5px
    margin-bottom: 0

  .avatar
    margin-right: 5px
    display: inline-block
    vertical-align: middle
    width: 22px
    height: auto
    border-radius: 3px
  .whitelisted-domain
    vertical-align: middle
    margin-right: 5px

  .users
    user-size = 18px
    height: user-size
    display: block
    margin: 0
    margin-top: 6px
    min-height: initial
    .user
      width: user-size
      height: user-size
      img
        width: user-size
        height: user-size
