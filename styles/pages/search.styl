.search-results
  
  .search-filters
    margin-top: 1rem
    button
      .status-badge
        vertical-align: top
        display: inline
        margin-left: 5px
        color: white;
        padding-top: 2px
        padding-right: 5px
        padding-bottom: 0
        padding-left: 5px
        border-radius: 5px
        background: tertiary
  
  .search-results__results-container
    overflow: initial
    border-radius: 5px
    display: flex
    flex-direction: row
    flex-wrap: wrap
    align-items: flex-start
    margin-left: -5px
    margin-right: -5px
    >li
      margin: 0
      padding: 0 5px 10px
      flex: 0 0 25%
      @media (max-width: largeViewport)	
        flex: 0 0 33.33%
      @media (max-width: mediumViewport)	
        flex: 0 0 50%
      @media (max-width: mediumSmallViewport)	
        flex: 1 0 auto
  
  .projects
    margin-top: 0
    padding: 0
    
    .project-options
      display: initial

    .project
      margin-bottom: 12px
    
    // > h2
    //   margin-bottom: calc(0.83em - 10px)
      
  .no-results
    margin-bottom: 2rem
    p
      margin: 0
      
.search-results__group-container
  margin-bottom: 3rem

// remove default search styling
input[type="search"],
input[type="search"]::-webkit-search-decoration,
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-results-button,
input[type="search"]::-webkit-search-results-decoration {
  -webkit-appearance:none;
}