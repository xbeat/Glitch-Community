.cover-container
  position: relative
  border-radius: 5px
  padding: 16px
  // overflow: auto
  background-size: 100%
  background-position: center
  .upload-image-buttons
    position: absolute
    top: 5px
    right: 5px
    button
      margin-left: 5px
  .clear-session
    position: absolute
    top: 16px
    right: 16px

.profile-info
  width: 100%
  max-width: 460px
  background-color: section-line
  border-radius: 5px
  padding: 12px
  display: flex

  .avatar-container
    width: 35%
    .user-avatar
      width: 100%
      padding-bottom: 100%
      margin-bottom: 5px
  
  .upload-image-buttons
    position: initial
    width: 100%
    text-align: center
    button
      margin: 0

.profile-information
  display: inline-block
  width: 65%
  padding-left: 16px
  vertical-align: middle
  > *
    margin: 0
    width: 100%
    word-break: break-word
    &:not(:last-child)
      margin-bottom: 12px
    p
      margin: 0
  .sparkling_heart
    width: 18px
    height: 18px

.users-information
  .users
    li
      margin-right: -7px

.user-avatar
  position: relative
  vertical-align: top
  background-size: cover
  background-repeat: no-repeat
  background-position: center
  border-radius: 50%

.team-avatar
  border-radius: 5px

.profile-page
  .projects
    padding: 0
    margin-bottom: 1rem
    display: inline-block
    .projects-container
      margin-bottom: 15px
      width: 100%
      .users
        >li
          &:first-child img
            border-radius: 50%

    .project-options
      display: block

  .slide-up
    animation: slideUp 0.1s ease-out
    animation-fill-mode: forwards

  .slide-down
    animation: fadeHalf 0.2s ease-out
    animation-fill-mode: forwards
    
.recent-projects

  .profile-avatar
    display: inline-block
    width: 18%
    margin: 0
    margin-right: 4%
    @media(max-width: 800px)
      display:none
      
  .user-avatar-container
    .user-avatar
      height: 0
      padding-bottom: 100%
      border-radius: 50%
  
  .projects
    display: inline-block
    margin: 0
    padding: 0
    width: 78%
    @media(max-width: 800px)
      width: 100%
  
  .projects-container
    overflow: hidden
    
  .project
    &:hover,
    &:active
      button
        background-color: cta
    &:after
      border-bottom-color: section-line

.anon-user-sign-up
  background: #83ffcd
  margin: 5px 0px
  padding: 12px
  border-radius: 5px
  position: relative
  
  button
    margin-right: 3px
    
  button:hover
    background-color: secondary-background-hover

  @media(max-width: 800px)
    width: 100%
    margin-bottom: 1rem
    
  .note
    color: tertiary
    font-size: small
    float: right
    margin-top: 7px
  
  .sign-in-pop
    left: 0px
    top: 26px