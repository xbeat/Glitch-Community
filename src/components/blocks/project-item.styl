  &:after
    content: ""
    top: -13px
    left: 8.5px
    border: solid transparent
    height: 0
    width: 0
    position: absolute
    pointer-events: none
    border-bottom-color: inherit
    border-width: 7px
  &.private
    background-color: #fcf3b0
    border-color: #fcf3b0

.projectHeader
  display: flex
  align-items: flex-start

.nameWrap
