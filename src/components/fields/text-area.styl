@require '../../../styles/globals'

.input-wrap
  display: inline-block
  width: 100%
  
.input-border
  position: relative
  border: none;
  border-bottom: 1px solid line-on-secondary-background
  border-radius: 0

.input
  font-family: monospace
  width: 100%
  padding: 4px 0px 2px
  resize: none
  border: none
  background: none
  transition: box-shadow .1s
  &:focus
    box-shadow: 0px 0px 3px 0px input-border-focused
    
.error-icon
  position: absolute
  right: 0
  bottom: 2px