@require '../constants'

.outer
  display: inline-block
  width: 100%

.inputBorder
  display: flex

  &.underline
    border: none;
    border-bottom: 1px solid line-on-secondary-background
    border-radius: 0
    .inputPart
      font-family: monospace

  &.opaque
    background-color: primary-background
    border: 1px solid input-border
    border-radius: 3px
    .inputPart:first-child
      padding-left: 10px
    .inputPart:last-child
      padding-right: 10px
    
.inputPart
  padding: 4px 0px 2px

.input
  min-width: 0
  flex-grow: 1
  border: none
  background: none

  &.search
    background-image: url(search)
    background-repeat: no-repeat
    background-position: right 5px center

.inputBorder, .input
  transition: box-shadow .1s
.inputBorder:focus-within, .input:focus
  box-shadow: 0px 0px 3px 0px input-border-focused
.inputBorder:focus-within .input:focus
  box-shadow: none